<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/allProducts.css">
  <link rel="shortcut icon" href="upload/favicon.ico" type="image/x-icon">
  <link rel="icon" href="upload/favicon.ico" type="image/x-icon">
  <title><%=Title%></title>
</head>

<body>
    <%-include('navbar.ejs')%>

    <div class="container">
       <div class="row justify-content-center">
        <%AllItemsList.forEach(function(element){%>
          <div class="col-lg-4 col-md-7 col-sm-9">
            <div class="card" style="width: 18rem;">
                <img src="upload/<%=element.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=element.itemName%></h5>
                  <%if(element.description.length > 100){%>
                    <%element.description = element.description.substring(0,100) + "..."%>
                  <%}%>
                  <p class="card-text"><%=element.description%></p>
                  <a href="items/add/<%=element._id%>"+ class="btn btn-success">Know More</a>
                </div>
            </div>
          </div>
        <%})%>
       </div>
    </div>
    <%-include('footer.ejs')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>

</html>
