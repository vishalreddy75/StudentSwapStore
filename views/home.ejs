  <script>
    $('.signup').hide();

    $('.ToSignUp').click(function(e) {
      e.preventDefault();
      $('.signup').show();
      $('.login').hide();
    });

    $('.ToLogIn').click(function(e) {
      e.preventDefault();
      $('.login').show();
      $('.signup').hide();
    })


