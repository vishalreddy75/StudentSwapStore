    <div class="container mt-5">
      <div class="row justify-content-center login">
          <div class="col-md-6">
              <div class="card">
                  <div class="card-header">
                      Login
                  </div>
                  <div class="card-body">
                      <form autocomplete="off" class="LogInForm" method="post" action="/">
                          <div class="form-group">
                              <label for="email">Email address</label>
                              <input type="email" class="form-control" name="LoginEmail" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                          </div>
                          <div class="form-group">
                              <label for="password">Password</label>
                              <input type="password" class="form-control" name="LoginPass" id="password" placeholder="Password">
                          </div>
                          <!-- <div class="form-group form-check">
                              <input type="checkbox" class="form-check-input" name="LoginCheck" id="remember_me">
                              <label class="form-check-label" for="remember_me">Remember me</label>
                          </div> -->
                          <div class="form-group">
                              <button type="submit"  class="btn btn-primary">Login</button>
                          </div>
                          <div class="form-group">
                              <a class="ToSignUp">Don't have an account? Create One</a>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </div>
      <div class="row justify-content-center signup">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Signup
                </div>
                <div class="card-body">
                    <form autocomplete="off" class="SignUpForm" method="post" action="/">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="SignupName" id="name" placeholder="Enter your name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" name="SignupEmail" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="SignupPass" id="password" placeholder="Password">
                        </div>
                        <!-- <div class="form-group">
                            <label for="confirm_password">Confirm Password</label>
                            <input type="password" class="form-control" name="SignupPassCheck" id="confirm_password" placeholder="Confirm Password">
                        </div> -->
                        <div class="form-group">
                          <button type="submit"  class="btn btn-primary">Signup</button>
                      </div>
                      <div class="form-group">
                          <a class="ToLogIn">Already have an account? Log In</a>
                      </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
